@model IEnumerable<EmployeesManagementSysTeam.Models.Employee>

@{
    ViewData["Title"] = "Employee Management System";
}

<h1 class="text-center mb-4">Employee Management System</h1>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">Create Employee</a>
    <a asp-controller="Projects" asp-action="Index" class="btn btn-primary">Manage Projects</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>Project Assigned</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                    <td>
                        <div class="d-flex">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-spacing">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-spacing">Details</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirmDelete();">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.EmployeesWithAnniversaries != null && ViewBag.EmployeesWithAnniversaries.Count > 0)
{
    <div id="anniversaryPopup" class="popup">
        <h2>Work Anniversaries Today</h2>
        <ul>
            @foreach (var employee in ViewBag.EmployeesWithAnniversaries)
            {
                <li>@employee.FirstName @employee.LastName - @((DateTime.Today.Year - employee.HireDate.Year)) years</li>
            }
        </ul>
        <button id="closePopup">Close</button>
    </div>
}


@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this record?');
        }

        $(document).ready(function () {
            if ($("#anniversaryPopup").length) {
                $("#anniversaryPopup").show();
            }

            $("#closePopup").click(function () {
                $("#anniversaryPopup").hide();
            });
        });
    </script>
}
